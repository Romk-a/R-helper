{
  "manifest_version": 3,
  "name": "R-Helper",
  "version": "1.4.0",
  "description": "Preview Zephyr Scale test results directly on Confluence pages",
  "permissions": ["activeTab", "downloads", "storage", "unlimitedStorage", "scripting", "alarms"],
  "optional_host_permissions": ["*://*/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{d1e3f5a7-b2c4-4e6f-8a0b-fafafafafafa}",
      "strict_min_version": "142.0",
      "data_collection_permissions": {
        "required": ["none"],
        "optional": []
      }
    }
  }
}
